@model IEnumerable<BIZ.BIZDocumento>
@using TFITest4.Resources

@{
    ViewBag.Title = "Prepedidos";
}
<head>
    <link href="~/Content/simptip.min.css" rel="stylesheet" />
</head>

<h2>Prepedidos - @ViewBag.Empresa</h2>

<table id="tableJqueryPedido" class="table table-bordered table-striped" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>NR Prepedido
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaEmision)
            </th>
            <th>
                <span class="simptip-position-top simptip-movable simptip-info" data-tooltip="Fecha Ultima modificacion">FUM</span>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th>Estado
            </th>
            <th>Usuario Creacion
            </th>
            <th><span class="simptip-position-top simptip-movable simptip-info" data-tooltip="Usuario Ultima modificacion">UUM</span>
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IDDocumento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaEmision)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaUltimaModificacion)
                </td>
                <td>
                    <span class="MontoPrePedido">@item.Monto</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoMisc.Detalle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario1.Nombre)
                </td>
                <td>
                    <p>
                        <button data-val="@item.IDDocumento"  value=""  class="CargarPedidos btn btn-primary btn-sm" >cargarPedido</button>
                        <button data-val="@item.IDDocumento"  value=""  class="DescartarPrePedido btn btn-danger btn-sm" >Descartar PrePedido</button>
                    </p>
                </td>
            </tr>
        }
    </tbody>
</table>

@section EndScript{

    <script>
        //.attr('data-val') 
        $('.CargarPedidos').click(function () {
            //var dataToSend = { CargarPedidoViejo: "juan" }
            var serviceURL = '@Url.Action("CargarPedidoViejo", "Pedido")';
            $.ajax({
                type: "POST",
                url: serviceURL,
                data: JSON.stringify({ PrePed: $(this).attr('data-val') }),
                dataType: 'text',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: successFunc,
                error: errorFunc
            });
            function successFunc(data, status) {
                toastr["success"]("The Cart has been loaded", "Success!")
            }
            function errorFunc(status) {
                toastr["error"]("@Language.ErrorLogInAgain", "Error")
            }

            GetInit();
        });

            $('.DescartarPrePedido').click(function () {
                //var dataToSend = { CargarPedidoViejo: "juan" }
                var serviceURL = '@Url.Action("DescartarPrePedido", "Pedido")';
                $.ajax({
                    type: "POST",
                    url: serviceURL,
                    data: JSON.stringify({ PrePed: $(this).attr('data-val') }),
                    dataType: 'text',
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (data, status) {
                        toastr["success"]("The cart has been removed", "Success!")
                        location.reload();
                    },
                    error: function (status) {
                        toastr["error"]("@Language.ErrorLogInAgain", "Error")
                }
            });

                GetInit();
            });

            //$(document).ready(function () {
            //    $('.MontoPrePedido').each(function (index) {
            //        esto = $(this).text();

            //        $(this).text("$"+ parseFloat(esto).format(2, 3, '.', ','))
            //    });
            //});
    </script>
}