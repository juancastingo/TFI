@model IEnumerable<BIZ.BIZDocumento>
@using TFITest4.Resources

@section headSection {
    <link href="~/Content/simptip.min.css" rel="stylesheet" />
}

<h2></h2>


<table id="" class="table tableJquery table-bordered table-striped" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>NR
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaEmision)
            </th>
            <th class="transparente"></th>
            <th style="width: 100px;">
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th>Estado
            </th>
            <th>Empresa
            </th>
            <th>Limite
            </th>
            <th>CC
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IDDocumento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaEmision)
                </td>
                <td class="SignoPesos">$</td>
                <td class="tdNumero">
                    <span class="MontoPrePedido">@item.Monto.ToString().Replace(",", ".")</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoMisc.Detalle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.ClienteEmpresa.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.ClienteEmpresa.Limite)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.CCStatus)
                </td>
                <td>
                    <p>
                        <button data-val="@item.IDDocumento"  value=""  class="AprobarPedido btn btn-success btn-sm" >Aprobar</button>
                        <button data-val="@item.IDDocumento"  value=""  class="RechazarPedido btn btn-danger btn-sm" >Rechazar</button>

                        @Html.ActionLink("Imprimir", "PedidoPDF", new { NrPedido = item.IDDocumento }, new { @class = "btn btn-primary btn-sm", @style = "color:white" })
                    </p>
                </td>
            </tr>
        }
    </tbody>
</table>



<div class="modal fade" id="PedidoModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 class="modal-title">Pedido</h3>
                <span class="field-validation-error" id="TextoCarritoPedidoModal"></span>
            </div>
            <div class="modal-body" id="PedidoModalBody">
                <h5 class="text-center">Pedido nr# <span id="NrPedido"></span></h5>
                <table class="table table-striped">
                    <thead id="tblHead">
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th colspan="2">Unit Price</th>
                            <th colspan="2">Total Price</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
                <div class="form-group">
                    <div id="PedidoDiv">
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default " data-dismiss="modal">Close</button>
            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

