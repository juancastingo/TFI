@model BIZ.BIZPrecioDetalle

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend class="titulo">PrecioDetalle</legend>
        <table class="table table-bordered table-striped" cellspacing="0" width="100%">
            <tr>
                <td class="editor-label">
                    Nr# @Model.IDPrecioDetalle
                    @Html.HiddenFor(model => model.IDPrecioDetalle)
                </td>
            </tr>


            <tr>
                <td class="editor-label">
                    
                    @Html.LabelFor(model => model.ListaPrecio.Detalle)
                    @Model.ListaPrecio.Detalle
                </td>
            </tr>
            <tr>
                <td class="editor-label">
                    
                    @Html.LabelFor(model => model.Producto)
                    @Model.Producto.Nombre
                </td>
            </tr>
            <tr>
                <td class="editor-label">
                    
                    @Html.LabelFor(model => model.Precio)
                    @Model.Precio
                </td>
            </tr>
            <tr>
                <td class="editor-field">
                    @Html.LabelFor(model => model.Activo)
                    @Html.EditorFor(model => model.Activo)
                    @Html.ValidationMessageFor(model => model.Activo)
                </td>
            </tr>
            <tr>

                <td>
                    <input class="btn btn-primary " type="submit" value="Save" />
                </td>
            </tr>
        </table>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
