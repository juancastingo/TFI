@foreach (var cat in ViewBag.categorias2)
{
    <center><h3>@cat.Detalle</h3></center>
    <div class="row clearfix">
        <div class="container">
            @foreach (var item in cat.Producto)
            {
                <div>
                    <form action="posts" method="get">
                        <div class="col-md-4">
                            <div class="minipost thumbnail">
                                <a class="fancybox" rel="@cat.Detalle" href="@item.Imagen">
                                    <img src="@item.Imagen" alt="" />
                                </a>
                                <p>
                                    <span>@item.Nombre</span>
                                </p>
                                <p class="precio">
                                    <span class="valor">$</span><span class="valor MontoPrePedido">@item.PrecioActual.ToString().Replace(",",".")</span>
                                </p>
                                @*                            <p>
                                <span>@item.Descripcion</span>
                            </p>*@
                            </div>
                        </div>
                    </form>
                </div>
            }

        </div>
    </div>
}



