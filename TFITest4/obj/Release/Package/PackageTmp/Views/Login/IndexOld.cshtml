@using TFITest4.Resources
@model TFITest4.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutStingo.Login.cshtml";
}

@if (@ViewBag.controlPostLogin != null) {
    <script>
        @ViewBag.controlPostLogin
    </script>
} else {

    <div class="modal-header">
        <h1 class="text-center">Login</h1>
    </div>

    <div class="modal-body">
        <form class="form col-md-12 center-block" method="post" action="/Login/Index">
           @* @Html.Hidden("returnUrl",@Request.QueryString)*@
            <div class="form-group">
                <input  type="text" class="form-control input-lg" placeholder='Usuario' name="UserName" autofocus>
            </div>
            <div class="form-group">
                <input type="password" class="form-control input-lg" placeholder='Contraseña' name="Password">
            </div>
            <div class="form-group">
                <label class="checkbox">
                    <input type="checkbox" value="remember-me" name="RememberMe"> Remember me
                </label>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary btn-lg btn-block" value='Submit' />
                @*<span><a href="#">Registrar</a></span><span></span>*@
            </div>
        </form>
    </div>

}