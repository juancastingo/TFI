@using TFITest4.Resources;
@model IEnumerable<TFITest4.Models.ModelPais>

<script type="text/javascript">
    tipoUserGroup = document.getElementById('LoginExiste').getAttribute("data-val");
    console.log(tipoUserGroup);
    if (tipoUserGroup != "Comercial" && tipoUserGroup != "Administrador") {
        window.location = "/Login/Error"
    }
</script>

<h2 class="titulo">@Language.Pais</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table tableJquery table-bordered table-striped" cellspacing="0" width="100%">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IDPais }) |
            @Html.ActionLink("Details", "Details", new { id=item.IDPais }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IDPais })
        </td>
    </tr>
}
    </tbody>

</table>
